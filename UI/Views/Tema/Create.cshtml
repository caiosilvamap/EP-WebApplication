@model App.ViewModels.TemaViewModel

<div class="container p-5">

    <form asp-controller="Tema" asp-action="Create" method="post">

        <div class="mb-3">
                <a class="bi bi-arrow-bar-left" style="font-size:40px; color:blue" asp-controller="Tema" asp-action="Index" role="button"></a>
            </div>

            <div class="row mb-3 g-5">
                <div class="form-header">
                    <div class="title">
                        <h1>Cadastrar</h1>
                    </div>
                </div>
            </div>

        <div class="row mb-3 g-5">
            <div class="mb-3">
                <label for="Nome" class="col-form-label col-form-label-lg">Nome do Tema</label>
                <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o Tema" Required>
            </div>

            <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" asp-for="Ativo" checked>
                <label class="form-check-label" for="Ativo">Ativo</label>                    
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Adicionar</button>

    </form>

</div>