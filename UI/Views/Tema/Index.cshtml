@using App.ViewModels;

@model List<TemaViewModel>

<div class="container p-5">

    <div class="row mb-3 g-5">
        <div class="title text-center col-12">
            <h1>Tema</h1>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <a class="bi bi-plus-circle-fill" style="font-size:50px; color:blue" asp-controller="Tema" asp-action="Create" role="button"></a>
        </div>
    </div>

    <div class="row mb-3 g-5 table-responsive">

            <table class="table table-hover table-striped table-bordered table-sm align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="col-1">Id</th>
                        <th scope="col" class="col-9">Nome</th>
                        <th scope="col" class="col-1">Ativo</th>
                        <th scope="col" class="col-1">Opções</th>
                    </tr>
                </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (TemaViewModel tema in Model)
                    {
                        <tr>
                            <th scope="row">@tema.Id</th>
                            <td>@tema.Nome</td>
                            <td>@tema.Ativo</td>
                            <td>
                                <div class="btn mx-3">
                                    <a role="button" class="bi bi-pencil-square" style="font-size:17px; color:blue" asp-route-id="@tema.Id" asp-controller="Tema" asp-action="Edit"></a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>







