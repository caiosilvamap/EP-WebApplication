@model App.ViewModels.FinanciamentoViewModel

    <div class="container p-5">

        <form asp-controller="Financiamento" asp-action="Create" method="post">

            <div class="mb-3">
                <a class="bi bi-arrow-bar-left" style="font-size:40px; color:blue" asp-controller="Financiamento" asp-action="Index" role="button"></a>
            </div>

            <div class="row mb-3 g-5">
                <div class="form-header">
                    <div class="title">
                        <h1>Cadastrar</h1>
                    </div>
                </div>
            </div>

            <div class="row mb-3 g-5">
                <div class="col mb-2">
                    <label for="Nome" class="col-form-label col-form-label-lg">Nome</label>
                    <input type="text" asp-for="Tipo" class="form-control" placeholder="Digite o Financiamento" required>
                </div>
            </div>

            <div>
                <button type="submit" class="btn btn-md btn-primary">Adicionar</button>
            </div>

        </form>

    </div>