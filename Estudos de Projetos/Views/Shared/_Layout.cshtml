<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Cadastro Projeto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaCadastroProjeto.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />


</head>

    <header>
        <nav class="navbar bg-dark navbar-dark navbar-expand-sm py-3 mb-5 sticky-top">
            <div class="container">
                <a class="navbar-brand" class="navbar-brand" asp-controller="Home" asp-action="Index">Dashboard</a>
                <div class="d-flex justify-content-center">
                    <form action="" class="d-flex mx-5 justify-content-center" >
                        <div class="input-group ">
                            <input type="search" name="search" id="search" class="form-control" placeholder="Buscar..." />
                        </div>
                    </form>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menuNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="menuNavbar">
                    <div class="navbar-nav ms-auto">
                        <a class="navbar-brand" class="navbar-brand" asp-controller="Projeto" asp-action="Index">Projetos</a>
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Menu</a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="GerenciaGeral" asp-action="Index">Gerência Geral</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Objetivo" asp-action="Index">Objetivo</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Tema" asp-action="Index">Tema</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Financiamento" asp-action="Index">Financiamento</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Gerencia" asp-action="Index">Gerência</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Usuario" asp-action="Index">Usuário</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <body>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </body>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - SistemaCadastroProjeto
        </div>
        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</html>
