@using SistemaCadastroProjeto.ViewModels;

@model List<FinanciamentoViewModel>

    <div class="container p-5">

    <div class="row mb-3 g-5">
        <div class="title text-center col-12">
            <h1>Financiamento</h1>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <a class="bi bi-plus-circle-fill" style="font-size:50px; color:blue" asp-controller="Financiamento" asp-action="Cadastrar" role="button"></a>
        </div>
    </div>

    <div class="row mb-3 g-5 table-responsive">

        <table class="table table-hover table-striped table-bordered table-sm align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col" class="col-1">Id</th>
                    <th scope="col" class="col-12">Nome</th>
                    <th scope="col" >Opções</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (FinanciamentoViewModel financiamento in Model)
                    {
                        <tr>
                            <th scope="row">@financiamento.Id</th>
                            <td>@financiamento.Tipo</td>
                            <td>
                                <div class="btn mx-3">
                                    <a role="button" class="bi bi-pencil-square" style="font-size:17px; color:blue" asp-route-id="@financiamento.Id" asp-controller="Financiamento" asp-action="Editar"></a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>







